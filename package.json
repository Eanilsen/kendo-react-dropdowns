{
  "name": "@telerik/kendo-react-dropdowns",
  "version": "0.1.0",
  "description": "Kendo UI React dropdowns",
  "repository": "telerik/kendo-react-component-base",
  "main": "dist/npm/js/index.js",
  "scripts": {
    "test": "gulp test",
    "start": "gulp start",
    "lint": "gulp lint"
  },
  "keywords": [
    "Kendo UI",
    "React"
  ],
  "dependencies": {
    "react": "~0.14.3",
    "react-dom": "~0.14.3",
    "react-addons-update": "~0.14.3",
    "classnames": "^2.1.5",
    "keycode": "^2.1.1",
    "@telerik/kendo-react-buttons": "^0.1.0",
    "@telerik/kendo-react-popup": "^0.1.3"
  },
  "devDependencies": {
    "@telerik/eslint-config": "1.1.0",
    "@telerik/kendo-react-tasks": "^1.7.0",
    "@telerik/kendo-theme-default": "telerik/kendo-theme-default#master",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "gulp": "3.9.0",
    "redux-devtools": "^3.2.0",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^1.1.1"
  },
  "author": "Telerik",
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run test"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  }
}
